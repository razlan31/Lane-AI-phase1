{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended"
  ],
  "plugins": ["react", "react-hooks"],
  "rules": {
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "no-restricted-imports": [
      "error",
      {
        "patterns": [
          {
            "group": ["react"],
            "message": "In hooks, only import specific functions: import { useState } from 'react'. In components, import React only if JSX is used."
          }
        ],
        "paths": [
          {
            "name": "react",
            "importNames": ["default"],
            "message": "Import React default only in JSX components. Use named imports for hooks: import { useState } from 'react'."
          }
        ]
      }
    ]
  },
  "overrides": [
    {
      "files": ["src/hooks/*.js"],
      "rules": {
        "no-restricted-imports": [
          "error",
          {
            "paths": ["react"]
          }
        ]
      }
    }
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "env": {
    "browser": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  }
}